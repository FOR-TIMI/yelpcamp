<% layout('layouts/boilerplate') %>

<div class="container align-items-center mt-5">
    <%- include('../partials/flash')%>
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1508873696983-2dfd5898f08b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Y2FtcGluZyUyMHRlbnR8ZW58MHx8MHx8&auto=format&fit=crop&w=600&q=60" alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input
                                class="form-control"
                                id="username"
                                type="text"
                                name="username"
                                required
                                autofocus
                            />
                            <div class="valid-feedback">Looks good!</div>
                        </div>
    
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input
                                class="form-control"
                                id="password"
                                type="password"
                                name="password"
                                required
                            />
                            <div class="valid-feedback">Looks good!</div>
                        </div>
    
                        <button class="btn btn-success btn-block">Login</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>